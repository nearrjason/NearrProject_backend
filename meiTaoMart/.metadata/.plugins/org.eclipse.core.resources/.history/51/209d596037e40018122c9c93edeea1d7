	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
        http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.2.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd">

	<!-- 加载配置文件 -->
	<context:property-placeholder location="classpath:conf/resource.properties" />
	
	<context:component-scan base-package="com.meitaomart.sso.controller" />
	
	<bean class="com.meitaomart.sso.exception.GlobalExceptionResolver" />
	<mvc:annotation-driven />
	<bean
		class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/jsp/" />
		<property name="suffix" value=".jsp" />
	</bean>
	<mvc:resources location="/css/" mapping="/css/**"/>
	<mvc:resources location="/js/" mapping="/js/**"/>
	<mvc:resources location="/images/" mapping="/images/**"/>
	<!-- 引用dubbo服务 -->
	<dubbo:application name="meitao-sso-web"/>
	<dubbo:registry protocol="zookeeper" address="${zookeeper.url}:${zookeeper.port}"/>	
	<dubbo:reference interface="com.meitaomart.sso.service.RegisterService" id="registerService" />
	<dubbo:reference interface="com.meitaomart.sso.service.LoginService" id="loginService" />
	<dubbo:reference interface="com.meitaomart.sso.service.TokenService" id="tokenService" />
	<dubbo:reference interface="com.meitaomart.user.service.UserService" id="userService" />
	<dubbo:reference interface="com.meitaomart.sso.service.ForgetPasswordService" id="forgetPasswordService"/>
</beans>